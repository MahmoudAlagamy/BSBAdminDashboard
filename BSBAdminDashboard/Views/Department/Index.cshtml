@{
    ViewBag.Title = SharedLocalizer["Department"];

    <!-- For Language -->
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}
@*For DropDown Select*@
@*<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />*@


@if (Culture == "ar-EG")
{
    <h3 id="Myh">
        <a class="btn btn-primary" asp-controller="Department" asp-action="Index" asp-route-culture="en-US">@SharedLocalizer["English"]</a>
    </h3>
}
@if (Culture == "en-US")
{
    <h3 id="Myh">
        <a class="btn btn-primary" asp-controller="Department" asp-action="Index" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"]</a>
    </h3>
}

<br />

<h2 id="Myh2">@SharedLocalizer["WTD"]</h2>

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">@SharedLocalizer["AddDepartments"]</a>
<hr />
<table class="table table-striped table-bordered text-center">
    <tr>
        @*<th class="text-center">Id</th>*@
        <th class="text-center">@SharedLocalizer["DepartmentName"]</th>
        <th class="text-center">@SharedLocalizer["DepartmentCode"]</th>
        <th class="text-center">@SharedLocalizer["Edit"]</th>
        <th class="text-center">@SharedLocalizer["Delete"]</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @*<td>@item.Id</td>*@
            <td>@item.DepartmentName</td>
            <td>@item.DepartmentCode</td>
            <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">@SharedLocalizer["Edit"]</a></td>
            <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">@SharedLocalizer["Delete"]</a></td>
        </tr>
    }
</table>

