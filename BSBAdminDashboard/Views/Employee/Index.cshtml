
@model IQueryable<BSBAdminDashboard.Models.EmployeeVM>

@using Microsoft.Extensions.Localization
@using BSBAdminDashboard.Resource.Employee

@inject IStringLocalizer<SharedResource> SharedLocalizer

@{
    ViewBag.Title = SharedLocalizer["Employee"];
    //Layout = null;

    // In mainlayout
    var Culture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}


<!-- In MainLayout -->
@if (Culture == "ar-EG")
{
    <h3 id="Myh">
        <a class="btn btn-primary" asp-controller="Employee" asp-action="Index" asp-route-culture="en-US">@SharedLocalizer["English"]</a>
    </h3>
}
@if (Culture == "en-US")
{
    <h3 id="Myh">
        <a class="btn btn-primary" asp-controller="Employee" asp-action="Index" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"]</a>
    </h3>
}

